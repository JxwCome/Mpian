.card-group {
  width: 720rpx;
  margin-left: 30rpx;
  height: 140rpx;
  line-height: 140rpx;
  border-bottom: 1rpx solid #ddd;
  position: relative;
}
.delete {
  width: 120rpx;
  position: absolute;
  color: #fff;
  right: 0;
  top: 0;
  text-align: center;
  z-index: 2;
  height: 140rpx;
  line-height: 140rpx;
  background-color: red;
}
.group-up {
  width: 720rpx;
  height: 140rpx;
  line-height: 140rpx;
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 9;
  box-sizing: border-box;
  padding-right: 30rpx;
  color: #333;
  font-size: 30rpx;
}
.group-up-title{
  float: left;
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 60rpx;
}
.group-up .name {
  max-width: 300rpx;
  overflow: hidden;
  float: left;
}
.group-up image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
  float: left;
}
.group-up .time {
  font-size: 22rpx;
  color: #999; 
  height: 28rpx;
  line-height: 28rpx;
} 
.red-spot {
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 30rpx;
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
}
.nobody{
  padding-top: 200rpx;
  text-align: center;
}
.thumb{
  width: 190rpx;
  height: 170rpx;
}
.nobody-text{
  margin-top: 140rpx;
  display: block;
  font-size: 30rpx;
  color: #999;
}