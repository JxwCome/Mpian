var proof = require('../../utils/proof.js');
var constract = require('../../utils/constract.js');
var app = getApp();
Page({
  data: {
    flag: true,
    mes: '获取验证码'
  },

  onLoad: function (options) {
    this.setData({
      userInfo: options
    })
  },
  phone: function (e) {
    this.data.phone = e.detail.value;
  },
  code: function (e) {
    this.data.code = e.detail.value;
  },
  bindcode: function () {
    var that = this;
    var phone = this.data.phone;
    if (!proof.isMobile(phone)) {
      console.log(12);
      wx.showModal({
        title: '提示',
        content: '请输入正确的手机号',
        showCancel: false
      });
      return;
    };
    wx.request({
      url: constract.sendCode,
      data:{phone:phone},
      success:function(res){
        console.log(res);
      }
    })
    proof.settime(that);
  },
  avatar:function(){
    var that=this;
    wx.chooseImage({
      count: 1,
      sizeType: ['original', 'compressed'],
      sourceType: ['album', 'camera'],
      success: function (res) {
        var tempFilePaths = res.tempFilePaths[0];
        var userInfo=that.data.userInfo;
        userInfo.avatar = tempFilePaths;
        that.setData({
          userInfo: userInfo
        })
      }
    })
  },
  submit: function (e) {
    var data = e.detail.value;
    var name = data.name;
    var phone = data.phone;
    var code = data.code;
    var email = data.email;
    var avatar = this.data.userInfo.avatar;
    console.log(avatar);
    if (proof.trim(name) == '') {
      wx.showModal({
        title: '提示',
        content: '姓名不能为空',
        showCancel: false
      });
      return;
    };
    if (!proof.isMobile(phone)) {
      console.log(12);
      wx.showModal({
        title: '提示',
        content: '请输入正确的手机号',
        showCancel: false
      });
      return;
    };
    if (proof.trim(email) !== '') {
      if (!proof.isEmail(email)) {
        wx.showModal({
          title: '提示',
          content: '请输入正确的邮箱格式',
          showCancel: false
        });
        return;
      }
    };
    app.Verification(function (token) {
      wx.request({
        url: constract.imgsUpdate,
        header: { token: token },
        data: {avatar:avatar},
        success: function (res) {
          // console.log(res);
        }
      });
      wx.request({
        url: constract.add,
        header: { token: token },
        data:data,
        success: function (res) {
          console.log(res);
          if (res.data.msg == "验证码错误") {
            wx.showModal({
              title: '提示',
              content: '请输入正确的验证码',
              showCancel: false
            });
            return;
          };
          wx.navigateBack();
        }
      });
    })
    
  }
})