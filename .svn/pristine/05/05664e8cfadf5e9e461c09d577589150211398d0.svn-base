.wxSortPickerViewTag{
  background-color: #f7f7f8;
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
}

.wxSortPickerViewItem{
  height: 140rpx;
  line-height: 140rpx;
  border-bottom: 1rpx solid #ddd;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  position: relative;
  z-index: 1;
}
.wxSortPickerViewItem .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  vertical-align: middle;
  margin-right: 26rpx;
}
.wxSortPickerViewItem .icon-phone {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -20rpx;
  z-index: 9;
}