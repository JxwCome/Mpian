page {
  background-color: #f7f7f8;
}
.mine-info-container {
  width: 690rpx;
  margin: 0 auto;
  height: 400rpx;
  position: relative;
}
.info-box {
  width: 430rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  flex-direction: column;
  overflow: hidden;
}
.info-picture {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  margin-bottom:24rpx;
  margin-top: 30rpx;
}
.info-picture image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  
}
.info-picture .v {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 27rpx;
  height: 27rpx;
}
.info-box .info-name {
  font-size:36rpx;
}
.info-box .info-job {
  font-size: 26rpx;
  color: #999;
  margin-top: 26rpx;
}
.info-box .info-company {
  color: #999;
  margin-top: 26rpx;
}
.to-ewm {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  top: 30rpx;
}
.to-ewm image {
  width: 50rpx;
  height: 50rpx;
}
.mine-list-container {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}
.mine-list-item {
  width: 100%;
  background-color: #fff;
}
.mine-list-item button {
  position:relative;
  display:block;
  margin: 0;
  padding: 0;
  font-size:30rpx;
  text-align:start;
  box-sizing: content-box;
  text-decoration:none;
  line-height:0;
  border-radius:none;
  color:#333;
  background-color:#fff;

}
button::after {
content:none;
width:0;
height:0;
position:absolute;
top:0;
left:0;
border:none;
-webkit-transform:scale(0);
transform:scale(0.5);
-webkit-transform-origin:0 0;
transform-origin:0 0;
box-sizing:content-box;
border-radius:none;

}

.mine-list-item .item-box {
  width: 690rpx;
  height: 87rpx;
  margin-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.add-border {
  border-bottom: 1rpx solid #ddd;
}
.mine-new {
  margin:20px 0;
}
.item-box text {
  font-size: 30rpx;
}
.item-box .renz {
  color: #999;
  margin-right: 12rpx;
}
.item-box .count {
  color: red;
  margin-right: 12rpx;
}
.item-box image {
  width: 12rpx;
  height: 20rpx;
}